    <children>

        <VBox prefHeight="150.0" prefWidth="200.0">
            <!--<children>-->
            <TextArea fx:id="area" prefHeight="100.0" prefWidth="200.0" editable="false"/>
            <TextField fx:id="port" text="Enter port (default: 3000)" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="29.0" prefWidth="200.0" />
            <Button contentDisplay="RIGHT" onAction="#start" text="Run Server" />
            <Button contentDisplay="RIGHT" onAction="#stop" text="Stop Server" />

            <!--</children>-->
        </VBox>
    </children>

</GridPane>
